@model CarStore.Web.Models.AddCarViewModel

@{
    ViewData["Title"] = "Add Car";
}

<h2>Add Car</h2>

<form asp-action="AddCar" method="post">
    <div style="margin-bottom:10px" class="form-group">
        <label asp-for="CarModelId" class="control-label"></label>
        <select asp-for="CarModelId" class="form-control" asp-items="@(new SelectList(Model.CarModels, "Id", "Name"))">
            <option value="">-- Select a Car Model --</option>
        </select>
        <a asp-action="AddCarModel" class="btn btn-primary mt-2">Add Car Model</a>
        <span asp-validation-for="CarModelId" class="text-danger"></span>
    </div>

    <div style="margin-bottom:10px" class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div style="margin-bottom:10px" class="form-group">
        <label asp-for="Color" class="control-label"></label>
        <input asp-for="Color" class="form-control" />
        <span asp-validation-for="Color" class="text-danger"></span>
    </div>

    <div style="margin-bottom:10px" class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" type="number" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}